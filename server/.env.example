# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/deedchain"

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Blockchain
BLOCKCHAIN_RPC_URL=https://linea-mainnet.infura.io/v3/your-project-id
PRIVATE_KEY=your-contract-deployer-private-key
DEED_NFT_ADDRESS=0xYourDeedNFTContractAddress
LAND_REGISTRY_ADDRESS=0xYourLandRegistryContractAddress

# IPFS/Storage
WEB3_STORAGE_TOKEN=your-web3-storage-token
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key

# Redis (for job queues)
REDIS_URL=redis://localhost:6379

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin
ADMIN_WALLET_ADDRESS=0xYourAdminWalletAddress